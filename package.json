  "scripts": {
    "db:generate:none": "prisma generate --no-engine",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "pre:db": "bun db:generate:none && bun db:push",
    "dev": "next dev -p 8080",
    "build": "next build",
    "start": "next start",
    "deploy": "bun pre:db && bun build",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze-b": "cross-env BUNDLE_ANALYZE=both next build",
    "update": "bun update --latest",
    "clean:build": "node pipeline/utils/clean.build",
    "clean:build:pkg": "node pipeline/utils/clean.pkg.build",
    "clean:node": "node pipeline/utils/clean.node",
    "clean": "pnpm run \"/^clean:.*/\"",
    "yarn:pre:db": "yarn db:generate:none && yarn db:push",
    "yarn:deploy": "yarn yarn:pre:db && yarn build"
  },
